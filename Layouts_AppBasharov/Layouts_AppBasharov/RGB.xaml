<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts_AppBasharov.RGB">
    <ContentPage.Content>
        <StackLayout Padding="12,12,12,12">
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <Slider x:Name="Slider1" Minimum="0" Maximum="255" Value="15" ValueChanged="Slider1_ValueChanged" HorizontalOptions="FillAndExpand"></Slider>
                <Slider x:Name="Slider2" Minimum="0" Maximum="100" Value="15" ValueChanged="Slider2_ValueChanged" HorizontalOptions="FillAndExpand"></Slider>
                <Slider x:Name="Slider3" Minimum="0" Maximum="100" Value="15" ValueChanged="Slider3_ValueChanged" HorizontalOptions="FillAndExpand"></Slider>
                <!--<Stepper x:Name="Stepper1" Minimum="0" Maximum="255" Value="8" Increment="2" ValueChanged="Stepper1_ValueChanged" HorizontalOptions="End"></Stepper>-->
            </StackLayout>
            <!--<Editor x:Name="Editor1" Text="Some Text" VerticalOptions="FillAndExpand"></Editor>-->
            <Frame x:Name="frame1" BackgroundColor="Gray" HorizontalOptions="FillAndExpand" HeightRequest="650" WidthRequest="300" ></Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>